    <script>
        let scores = [0, 0, 0, 0, 0];
        let groupNames = ["Group 1", "Group 2", "Group 3", "Group 4", "Group 5"];
        
        const rewardCeremonyMusic = "https://files.catbox.moe/r2ln7r.mp3"; 
        const wrongAnswerSound = "https://www.myinstants.com/media/sounds/wrong-answer-sound-effect.mp3"; 

        const categories = [
            { id: 1, type: '3sec', name: "00s Dancing Hits", audio: "https://github.com/edricenglishlearning/audio/blob/2d6de05d9ee26a55596011be1b3d290590df8877/Lady%20Gaga%20-%20Just%20Dance%20(Official%20Music%20Video)%20ft.%20Colby%20O%20Donis.mp3", answer: "Just Dance - Lady Gaga", points: 2, startTime: 51 },
            { id: 2, type: '3sec', name: "Disney", audio: "https://github.com/edricenglishlearning/audio/blob/2d6de05d9ee26a55596011be1b3d290590df8877/Do%20You%20Want%20to%20Build%20a%20Snowman%20%20(From%20%20Frozen%20_Sing-Along).mp3", answer: "Do you want to Build a Snowman - Frozen", points: 2, startTime: 6 },
            { id: 3, type: '3sec', name: "00s Love", audio: "https://files.catbox.moe/8eo2x9.mp3", answer: "I'm Yours - Jason Mraz", points: 2, startTime: 36 },
            { id: 4, type: '3sec', name: "Mandopop", audio: "https://files.catbox.moe/555yqz.mp3", answer: "Â§±ÊàÄÁÑ°ÁΩ™ - Alin", points: 2, startTime: 60 },
            { id: 5, type: '3sec', name: "K-Pop", audio: "https://files.catbox.moe/vfzh90.mp3", answer: "Super Shy - New Jeans", points: 2, startTime: 9 },
            
            { id: 6, type: 'reverse', name: "Dancing Queen", questionAudio: "https://files.catbox.moe/j1edrc.mp3", answerAudio: "https://files.catbox.moe/kqiry8.mp3", answer: "Crazy in Love - Beyonc√©", points: 5, startTime: 45 },
            { id: 7, type: 'reverse', name: "Disney Magic", questionAudio: "https://files.catbox.moe/v61085.mp3", answerAudio: "https://files.catbox.moe/5mobxc.mp3", answer: "A Whole New World - Aladdin", points: 5, startTime: 30 },
            { id: 8, type: 'reverse', name: "K-Pop Legend", questionAudio: "https://files.catbox.moe/tma0jq.mp3", answerAudio: "https://files.catbox.moe/vwzzq3.mp3", answer: "Bang Bang Bang - BigBang", points: 5, startTime: 4 },
            { id: 9, type: 'reverse', name: "Taiwanese Pop", questionAudio: "https://files.catbox.moe/6pk84m.mp3", answerAudio: "https://files.catbox.moe/55mkh4.mp3", answer: "Êµ™Â≠êÂõûÈ†≠ - ËåÑÂ≠êËõã", points: 5, startTime: 63 },
            { id: 10, type: 'reverse', name: "Taiwanese Rapper", questionAudio: "https://files.catbox.moe/1pqyi1.mp3", answerAudio: "https://files.catbox.moe/la0a2t.mp3", answer: "ÁîüÁÖéÂåÖ - MJ116", points: 5, startTime: 61 }
        ];

        let currentCategory = null;
        let completedIds = new Set();
        let listensUsed = 0;
        let isPlaying = false;
        let isSingingAlong = false; 
        let currentTimer = null;
        const audioEl = document.getElementById('main-audio');
        const sfxEl = document.getElementById('sfx-audio');
        const errorEl = document.getElementById('audio-error');

        audioEl.onended = () => { stopMusicManually(); };
        audioEl.onerror = () => { if (audioEl.src && audioEl.src !== window.location.href) errorEl.classList.remove('hidden'); };

        function startGame() {
            document.getElementById('rules-view').classList.add('hidden');
            document.getElementById('dashboard-view').classList.remove('hidden');
            document.getElementById('main-title').classList.remove('hidden');
            updateScoreboard();
            initGrid();
        }

        function showRules() {
            document.getElementById('dashboard-view').classList.add('hidden');
            document.getElementById('rules-view').classList.remove('hidden');
        }

        function toggleRenameMode() {
            const panel = document.getElementById('rename-panel');
            panel.classList.toggle('hidden');
            if (!panel.classList.contains('hidden')) {
                groupNames.forEach((name, i) => {
                    const input = document.getElementById(`name-${i}`);
                    if (input) input.value = name;
                });
            }
        }

        function updateGroupName(index, newName) {
            groupNames[index] = newName || `Group ${index + 1}`;
            updateScoreboard();
        }

        function addManualMark(index) {
            scores[index] += 1;
            updateScoreboard();
        }

        function updateScoreboard() {
            const scoreboard = document.getElementById('scoreboard');
            if (!scoreboard) return;
            scoreboard.innerHTML = scores.map((s, i) => `
                <div class="score-pill shadow-lg">
                    <div class="extra-mark-btn" onclick="addManualMark(${i})">+</div>
                    <span class="text-[9px] md:text-[10px] uppercase font-bold text-indigo-400/60 mb-1 truncate max-w-[80px]">${groupNames[i]}</span>
                    <span class="text-xl md:text-2xl font-bold text-white">${s}</span>
                </div>
            `).join('');
        }

        function playWrongSound() {
            sfxEl.src = wrongAnswerSound;
            sfxEl.volume = 1;
            sfxEl.play().catch(e => console.log("SFX play blocked"));
        }

        function awardPoints(index, element) {
            if (!currentCategory) return;
            scores[index] += currentCategory.points;
            updateScoreboard();
            const original = element.innerHTML;
            element.innerHTML = `‚úÖ Added!`;
            element.classList.add('bg-indigo-600');
            setTimeout(() => { 
                element.innerHTML = original;
                element.classList.remove('bg-indigo-600'); 
            }, 1000);
        }

        function initGrid() {
            const grid = document.getElementById('category-grid');
            if (!grid) return;
            grid.innerHTML = categories.map(cat => {
                let badgeClass = cat.type === '3sec' ? 'bg-green-500/20 text-green-400' : 'bg-purple-500/20 text-purple-400';
                return `
                <div class="category-card ${completedIds.has(cat.id) ? 'completed' : ''}" onclick="openQuestion(${cat.id})">
                    <div class="card-inner glass rounded-2xl flex flex-col items-center justify-center p-4 text-center border border-white/5">
                        <span class="text-xs uppercase tracking-[0.2em] font-bold ${badgeClass} px-3 py-1 rounded-full mb-3">${cat.points} Marks</span>
                        <span class="text-lg md:text-xl font-bold text-white line-clamp-1">${cat.name}</span>
                    </div>
                </div>`
            }).join('');
        }

        function openQuestion(id) {
            currentCategory = categories.find(c => c.id === id);
            if (!currentCategory) return;
            
            listensUsed = 0; isPlaying = false; isSingingAlong = false;
            if (currentTimer) clearInterval(currentTimer);
            errorEl.classList.add('hidden');
            
            const tag = document.getElementById('q-category-tag');
            tag.innerText = `${currentCategory.name} ‚Ä¢ ${currentCategory.points} Marks`;
            let tagColor = currentCategory.type === '3sec' ? 'bg-green-500 text-slate-900' : 'bg-purple-500 text-white';
            tag.className = `text-xs uppercase tracking-[0.3em] font-bold mb-4 py-1 px-4 inline-block rounded-full ${tagColor}`;
            
            document.getElementById('answer-box').classList.add('hidden');
            document.getElementById('stop-sing-btn').classList.add('hidden');
            document.getElementById('stop-question-btn').classList.add('hidden');
            document.getElementById('challenge-actions').classList.remove('hidden');
            document.getElementById('progress-bar').style.width = '0%';
            
            document.getElementById('q-title').innerText = currentCategory.type === 'reverse' ? "Listen Carefully" : "Listen and Guess";
            document.getElementById('play-challenge-btn').disabled = false;
            
            // Critical fix: load the audio source but don't play yet
            audioEl.src = (currentCategory.type === 'reverse' ? currentCategory.questionAudio : currentCategory.audio) || '';
            audioEl.load();

            document.getElementById('question-view').classList.remove('hidden');
        }

        function playAudioSnippet() {
            if (!currentCategory) return;
            const audioSrc = currentCategory.type === 'reverse' ? currentCategory.questionAudio : currentCategory.audio;
            if (isPlaying || (listensUsed >= 3 && !isSingingAlong) || !audioSrc) return;

            if (!isSingingAlong) listensUsed++;
            isPlaying = true;
            isSingingAlong = false; 
            document.getElementById('listen-counter').innerText = `Listens used: ${listensUsed} / 3`;
            if (listensUsed >= 3) document.getElementById('play-challenge-btn').disabled = true;
            document.getElementById('stop-question-btn').classList.remove('hidden');

            audioEl.volume = 1;

            // FIX: Ensure snippet always starts from 0:00 as requested
            const handlePlay = () => {
                audioEl.currentTime = 0;
                audioEl.play().catch(e => { 
                    errorEl.classList.remove('hidden'); 
                    isPlaying = false; 
                });
                audioEl.removeEventListener('canplay', handlePlay);
            };

            if (audioEl.readyState >= 2) handlePlay();
            else audioEl.addEventListener('canplay', handlePlay);

            const startRealTime = Date.now();
            if (currentTimer) clearInterval(currentTimer);
            currentTimer = setInterval(() => {
                if (currentCategory.type === '3sec') {
                    const elapsed = (Date.now() - startRealTime) / 1000;
                    document.getElementById('progress-bar').style.width = Math.min((elapsed / 3) * 100, 100) + '%';
                    if (elapsed >= 3) stopMusicManually();
                } else if (audioEl.duration) {
                    document.getElementById('progress-bar').style.width = (audioEl.currentTime / audioEl.duration) * 100 + '%';
                }
            }, 50);
        }

        function stopMusicManually() {
            if (currentTimer) clearInterval(currentTimer);
            audioEl.pause();
            audioEl.volume = 1; 
            isPlaying = false;
            
            document.getElementById('stop-sing-btn').classList.add('hidden');
            document.getElementById('stop-question-btn').classList.add('hidden');
            document.getElementById('progress-bar').style.width = '0%';
            isSingingAlong = false; 
        }

        function showAnswerAndPlay() {
            if (!currentCategory) return;
            
            const container = document.getElementById('award-buttons-container');
            container.innerHTML = groupNames.map((name, i) => `
                <button onclick="awardPoints(${i}, this)" class="w-full py-3 bg-slate-800 hover:bg-indigo-600 rounded-xl font-bold transition border border-white/5 text-xs text-left px-5 flex justify-between items-center group text-white">
                    <span>${name}</span>
                    <span class="opacity-0 group-hover:opacity-100 transition text-white">+${currentCategory.points}</span>
                </button>
            `).join('');

            document.getElementById('answer-box').classList.remove('hidden');
            document.getElementById('q-answer').innerText = currentCategory.answer;
            document.getElementById('challenge-actions').classList.add('hidden');
            completedIds.add(currentCategory.id);
            
            playSingAlong();
        }

        function playSingAlong() {
            if (!currentCategory) return;
            const singAlongSrc = currentCategory.type === 'reverse' ? currentCategory.answerAudio : currentCategory.audio;
            if (!singAlongSrc) return;

            isPlaying = true;
            isSingingAlong = true;
            document.getElementById('stop-sing-btn').classList.remove('hidden');
            
            audioEl.src = singAlongSrc;
            audioEl.volume = 1;
            
            const handleLoad = () => {
                audioEl.currentTime = currentCategory.startTime || 0;
                audioEl.play().catch(err => {
                    console.error("Playback failed", err);
                    isPlaying = false;
                });
                audioEl.removeEventListener('loadedmetadata', handleLoad);
            };

            if (audioEl.readyState >= 1) handleLoad();
            else audioEl.addEventListener('loadedmetadata', handleLoad);

            if (currentTimer) clearInterval(currentTimer);
            currentTimer = setInterval(() => {
                if (audioEl.duration) {
                    const progress = (audioEl.currentTime / audioEl.duration) * 100;
                    document.getElementById('progress-bar').style.width = progress + '%';
                }
            }, 100);
        }

        function showFinalRanking() {
            document.getElementById('dashboard-view').classList.add('hidden');
            document.getElementById('main-title').classList.add('hidden');
            document.getElementById('ranking-view').classList.remove('hidden');
            
            const groupData = scores.map((s, i) => ({ name: groupNames[i], score: s }));
            groupData.sort((a, b) => b.score - a.score);
            
            // Hierarchy sizes
            const paddings = ['p-10', 'p-8', 'p-6', 'p-5', 'p-4'];
            const rankSizes = ['text-6xl', 'text-5xl', 'text-4xl', 'text-3xl', 'text-2xl'];
            const nameSizes = ['text-4xl', 'text-3xl', 'text-2xl', 'text-xl', 'text-lg'];
            const scoreSizes = ['text-5xl', 'text-4xl', 'text-3xl', 'text-2xl', 'text-xl'];

            document.getElementById('ranking-list').innerHTML = groupData.map((g, i) => `
                <div class="ranking-item flex justify-between items-center ${paddings[i]} rounded-2xl border border-white/5 ${i === 0 ? 'border-yellow-500/30 bg-yellow-500/5 shadow-2xl shadow-yellow-500/10' : ''}">
                    <div class="flex items-center gap-6">
                        <span class="${rankSizes[i]} font-bold ${i === 0 ? 'text-yellow-400' : 'text-slate-500'}">#${i + 1}</span>
                        <span class="${nameSizes[i]} font-bold text-white truncate max-w-[200px] md:max-w-none">${g.name}</span>
                    </div>
                    <div class="${scoreSizes[i]} title-font font-bold text-indigo-400 whitespace-nowrap">${g.score} <span class="text-[10px] uppercase font-sans tracking-widest text-slate-500 ml-2">Pts</span></div>
                </div>
            `).join('');
            
            playCeremonyMusic();
        }

        function playCeremonyMusic() {
            if (isPlaying) {
                audioEl.pause();
                if (currentTimer) clearInterval(currentTimer);
            }
            
            isPlaying = true;
            audioEl.src = rewardCeremonyMusic;
            audioEl.volume = 1;
            audioEl.currentTime = 0;
            audioEl.play().catch(e => {
                console.log("Ceremony auto-play blocked.", e);
                isPlaying = false;
            });
        }

        function backToDashboard() {
            stopMusicManually();
            document.getElementById('question-view').classList.add('hidden');
            document.getElementById('ranking-view').classList.add('hidden');
            document.getElementById('dashboard-view').classList.remove('hidden');
            document.getElementById('main-title').classList.remove('hidden');
            initGrid();
        }

        window.onload = startGame;
    </script>
</body>
</html>
